<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUsers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#96E264</item>
        <item name="colorPrimaryVariant">#0d1117</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">#0d1117</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="UserPropertyIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="UserPropertyText">
        <item name="android:textColor">#bdc1c6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="UserPropertyLogin" parent="UserPropertyText">
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="UserPropertyName" parent="UserPropertyText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="HideGroup">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ErrorMsg">
        <item name="android:textColor">#bdc1c6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TryAgainBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/try_again</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">#96E264</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#96E264</item>

    </style>

    <style name="LoginInItem">
        <item name="android:textColor">#bdc1c6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AvatarInItem">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/ic_default_avatar</item>
    </style>

    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#96E264</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ErrorView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorTextColor">#bdc1c6</item>
        <item name="errorTextSize">6sp</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="buttonTextSize">6sp</item>
        <item name="spaceSize">16dp</item>
        <item name="buttonText">@string/try_again</item>
    </style>

    <style name="ErrorInStateAdapter" parent="ErrorView">
        <item name="android:layout_width">match_parent</item>
        <item name="spaceSize">0dp</item>
    </style>
</resources>